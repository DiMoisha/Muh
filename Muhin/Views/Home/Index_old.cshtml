@model Muh.Models.MyDatView

@{
    ViewBag.Title = "Период";
}

<h2>Выбор периода</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CBDat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CBDat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CBDat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CEDat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CEDat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CEDat, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            @Html.ActionLink("Продукция", "Production",new { cbDat = Model.CBDat, ceDat = Model.CEDat },null)
            
            <br />
            @Html.ActionLink("Категории", "Categ", new { cbDat = Model.CBDat, ceDat = Model.CEDat })
            <br />
            @Html.ActionLink("По часам", "Hr", new { cbDat = Model.CBDat, ceDat = Model.CEDat })
            <br />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input name="Prod" type="submit" value="Продукция" class="btn btn-default" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input name="Categ" type="submit" value="Категории" class="btn btn-default" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input name="Hr" type="submit" value="По часам" class="btn btn-default" />
            </div>
        </div>
    </div>
}

